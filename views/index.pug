extends layout

mixin projectitem(project)
  li.list-group-item 
    span.project-number
    span= project.project_name

block content
  if(user)
    div(class="user-data")
      span You are logged in as #{user.student_name}
    div(class="clear")
    a(href="/sign-out", class="sign-out") Log out ‚Üê
    div.row
      div.col-xs-6.pre-scrollable
        ul.list-group.do-drop#projects-list
          for project in projects
            +projectitem(project)
      div.col-xs-6
        ul.list-group.do-drop#chosen-projects-list
    link(rel="stylesheet", href="/vendors/jquery-ui/jquery-ui.min.css")
    script(src="/vendors/jquery-ui/external/jquery/jquery.js")
    script(src="/vendors/jquery-ui/jquery-ui.min.js")
    script(src="/js/home.js")
  else  
    div(class="inner cover")
        h1(class="cover-heading") Students` projects App
        p(class="lead") Assigning student to projects App Using Node.js & MySQL.
        p(class="lead")
          a(href="/signin", class="btn btn-lg btn-default") Sign in
block nav
  li.active
   a(href="/") Home
  li
   a(href="/projects") Projects
  if(user)
    li
      a(href="/sign-out") Sign out
  else
    li
      a(href="/signin") Sign in